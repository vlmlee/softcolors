<div id="pagepiling">
    <!-- first section - main -->
    <div class="section">
        <!-- navigation -->
        <div class="nav">
            <div class="shift">
                <a href="/">
                    SoftColors.site
                </a>
            </div>
            <div>
                <a>
                </a>
            </div>
            <div class="right-align">
                <a id="about">
                    About
                </a>
            </div>
            <div class="shift center-align">
                <a href="http://github.com/vlmlee/softcolors.io">
                    Github
                </a>
            </div>
        </div>
        <!-- /navigation -->
        <hr color="#f1f1f1" width="100%">
        <div class="hero-header">
            <!-- header with logo -->
            <!-- animate heading with colors -->
            <div class="header-logo">
                <h1>S<span class="smaller">oft</span> C<span class="smaller">olors</span>
                    </h1>
            </div>
            <!-- Popup saved dialog -->
            <div id="copied" class="zoom-anim-dialog mfp-hide">
                <h1>Saved to clipboard!</h1>
            </div>
            <!--- top buttons -->
            <div class="top-buttons">
                <h1><button class="options button button--winona button--border-thin button--round-l button--text-upper button--size-s button--text-thick" data-text="Convert" data-action="convert"><span>Convert</span></button></h1>
                <h1><button class="options button button--winona button--border-thin button--round-l button--text-upper button--size-s button--text-thick" data-text="Choose" data-action="choose"><span>Choose</span></button></h1>
                <h1><button class="options button button--winona button--border-thin button--round-l button--text-upper button--size-s button--text-thick" data-text="Random" data-action="random"><span>Random</span></button></h1>
            </div>
            <!-- /buttons -->
            <div class="content">
                <!-- content will appear here -->
                <div class="shift">
                    <!-- input colors -->
                    <form id="inputColorForm" name="inputColorForm" method="post">
                        <label for="hex">Hex</label>
                        <input type="text" name="hex" value="" />
                        <label for="RBG">RBG</label>
                        <input type="text" name="rgb" value="" />
                    </form>
                    <!-- /input -->
                    <!-- output colors -->
                    <form id="outputColorForm" name="outputColorForm">
                        <label for="soft-hex">Soft Hex</label>
                        <input name="soft-hex" value="" />
                        <label for="soft-rgb">Soft RGB</label>
                        <input name="soft-rgb" value="" />
                    </form>
                    <!-- /output -->
                </div>
                <button class="convert-button submit" name="submit">soften</button>
                <button class="convert-button clear" name="clear">clear</button>
                <div class="color-boxes row-1">
                    <li class="empty-box">
                    </li>
                    <li class="box convert-color-box convert-colors">
                        <p class="color-code">Before</p>
                    </li>
                    <li class="box convert-soft-color-box convert-colors">
                        <p class="color-code">After</p>
                    </li>
                    <li class="empty-box">
                    </li>
                </div>
            </div>
        </div>
    </div>
    <!-- /main -->
    <!-- second section - about -->
    <div class="section">
        <div class="page-2-wrapper">
            <div class="about">
                <h1>About</h1>
                <p>
                    This is a simple app utilizing the <a href="https://github.com/bgrins/TinyColor">TinyColor API</a> that takes an input color and softens it for you. Simple.
                </p>
                <p>Created and designed by <a href="http://www.corollari.com">Michael Lee.</a></p>
            </div>
        </div>
        <footer>
            <p>&copy; 2016 Michael Lee</p>
            <p></p>
        </footer>
